-- Thiết lập tọa độ dịch chuyển
local targetPosition = Vector3.new(-0.487000167, 9.38285542, -17.3451862)

-- Trạng thái auto click
local autoClick = false -- Mặc định tắt auto click

-- Hàm dịch chuyển nhân vật
local function teleportPlayer(player)
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
    humanoidRootPart.CFrame = CFrame.new(targetPosition)
    print("Đã dịch chuyển đến tọa độ mục tiêu!")
end

-- Hàm bật/tắt auto click
local function toggleAutoClick()
    autoClick = not autoClick
    if autoClick then
        print("Auto click đã BẬT")
        startAutoClick()
    else
        print("Auto click đã TẮT")
    end
end

-- Hàm auto click
local function startAutoClick()
    spawn(function()
        while autoClick do
            -- Thực hiện click chuột (giả lập chuột trái)
            game:GetService("VirtualInputManager"):SendMouseButtonEvent(0, 0, 0, true, game, 0)
            game:GetService("VirtualInputManager"):SendMouseButtonEvent(0, 0, 0, false, game, 0)
            wait(0.1) -- Thời gian giữa các lần click
        end
    end)
end

-- Nhận phím từ người chơi
local player = game.Players.LocalPlayer
local UIS = game:GetService("UserInputService")

UIS.InputBegan:Connect(function(input, processed)
    if processed then return end -- Bỏ qua nếu input đã được xử lý

    -- Nhấn phím "T" để dịch chuyển
    if input.KeyCode == Enum.KeyCode.T then
        teleportPlayer(player)
    end

    -- Nhấn phím "C" để bật/tắt auto click
    if input.KeyCode == Enum.KeyCode.C then
        toggleAutoClick()
    end
end)
